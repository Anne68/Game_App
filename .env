# === Security === 
SECRET_KEY=change_me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# === Database (MySQL) — connexion à ton MySQL Windows (127.0.0.1:3307 vu depuis Docker) ===
DB_HOST=host.docker.internal
DB_PORT=3307
DB_USER=root
DB_PASSWORD=root
DB_NAME=games_db
# SQLAlchemy / Alembic URL
DB_URL=mysql+pymysql://root:root@host.docker.internal:3307/games_db

# === CORS & Logs ===
LOG_LEVEL=INFO
ALLOW_ORIGINS=http://localhost,http://127.0.0.1:8501,http://localhost:8501

# === Monitoring ===
PROMETHEUS_ENABLED=true

# === Optional ===
MLFLOW_TRACKING_URI=mlruns
